{
  "apps": [
    {
      "name": "i18n_me",
      "interpreter": "bun",
      "script": "start",
      "exec_mode": "fork",
      "instances": 1,
      "autorestart": true,
      "max_restarts": 3,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production"
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "merge_logs": true,
      "error_file": "logs/error.log",
      "out_file": "logs/out.log"
    }
  ]
}
