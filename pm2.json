{
  "apps": [
    {
      "name": "i18n_me",
      "script": "bun run src/index.ts",
      "instances": 1,
      "max_memory_restart": "300M",
      "env": {
        "NODE_ENV": "production"
      },
      "max_restarts": 3,
      "restart_delay": 10000,
      "exp_backoff_restart_delay": 100,
      "log_date_format": "YYYY-MM-DD HH-mm-ss",
      "error_file": "logs/error.log",
      "out_file": "logs/out.log"
    }
  ]
}

